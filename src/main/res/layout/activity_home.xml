<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="0dp"
    >

    <RelativeLayout
        android:id="@+id/rl111"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_200"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home Page"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textAlignment="center"
            />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sales"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="sans-serif-black"
        android:textSize="22dp"
        android:textColor="@color/purple_700"
        android:layout_marginTop="55dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:id="@+id/sales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="86dp"
        android:background="#f4f4f4"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:weightSum="100"
        >

        <LinearLayout
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30% OFF"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:textSize="14dp"
                android:textColor="#888" />

            <View
                android:layout_width="84dp"
                android:layout_height="2dp"
                android:background="@color/purple_200"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50% OFF"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:textSize="14dp"
                android:textColor="#888" />
            <View
                android:layout_width="84dp"
                android:layout_height="2dp"
                android:background="@color/purple_200"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sales"
        android:scrollbars="vertical"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >

        <Button
            android:id="@+id/Home_page"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_home_black_24dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"
            android:text="HOME"
            android:textColor="@color/black"
            android:textSize="8dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/Search_page"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:drawableTop="@drawable/ic_search_black_24dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"
            android:text="SEARCH"
            android:textColor="@color/black"
            android:textSize="8dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/Cart_page"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:drawableTop="@drawable/ic_add_shopping_cart_black_24dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"
            android:text="CART"
            android:textColor="@color/black"
            android:textSize="8dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/Profile_page"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:drawableTop="@drawable/ic_profile_black_24dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"
            android:text="ME"
            android:textColor="@color/black"
            android:textSize="8dp"
            android:textStyle="bold"
            />

    </LinearLayout>

</RelativeLayout>