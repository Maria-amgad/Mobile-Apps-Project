<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="50dp">

    <TextView
        android:id="@+id/txt11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Item URL"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        />

    <EditText
        android:id="@+id/itemsearch"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="URL"
        android:layout_below="@+id/txt11"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        />

    <Button
        android:id="@+id/search_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemsearch"
        android:text="Search"
        android:textSize="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="right"
        />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/Home_page"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_home_black_24dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"
            android:text="HOME"
            android:textColor="@color/black"
            android:textSize="8dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/Search_page"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:drawableTop="@drawable/ic_search_black_24dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"
            android:text="SEARCH"
            android:textColor="@color/black"
            android:textSize="8dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/Cart_page"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:drawableTop="@drawable/ic_add_shopping_cart_black_24dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"
            android:text="CART"
            android:textColor="@color/black"
            android:textSize="8dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/Profile_page"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:drawableTop="@drawable/ic_profile_black_24dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"
            android:text="ME"
            android:textColor="@color/black"
            android:textSize="8dp"
            android:textStyle="bold"
            />

    </LinearLayout>

</RelativeLayout>